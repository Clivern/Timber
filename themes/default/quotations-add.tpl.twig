    <section class="main-content-wrapper">

        <div class="ui stackable grid">

            <div class="sixteen wide column">
                <div class="col-lg-12">
                    <div class="metabox blue">
                        <div class="metabox-body">
                            <h4 class="font-light m-b-xs"><i class="fa fa-fw fa-comments"></i> {{ __("Quotations") }}</h4>
                        </div>
                    </div>
                </div>
            </div>

            <div class="four wide column">
                <div class="metabox">
                    <div class="metabox-heading">{{ __("Form Elements") }}</div>
                    <div class="metabox-body">
                        <button data-id="text_elem" class="fluid tiny ui button new_element">{{ __("Text") }}</button><br/>
                        <button data-id="para_elem" class="fluid tiny ui button new_element">{{ __("Paragraph") }}</button><br/>
                        <button data-id="chek_elem" class="fluid tiny ui button new_element">{{ __("Checkbox") }}</button><br/>
