                        <button data-id="sect_elem" class="fluid tiny ui button new_element">{{ __("Section Break") }}</button>
                    </div>
                </div>
            </div>

            <div class="twelve wide column">
                <div class="metabox">
                    <div class="metabox-heading">{{ __("Form Preview") }}</div>
                    <div class="metabox-body">

                        <form action="{{ add_quotation_action|e('html_attr') }}" id="form_preview" class="ui form" method="post">
                            {{ nonce_form() }}

                            <div class="field required">
                                <label>{{ __("Title") }}</label>
                                <input type="text" name="quotation_title">
                            </div>

                            <span id="elements_preview"></span>
                            <br/>
                            <button class="ui primary button" type="submit">{{ __("Submit") }}</button>
                            <button class="ui button" type="reset">{{ __("Cancel") }}</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>

